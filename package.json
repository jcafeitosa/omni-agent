{
  "name": "omni-agent-monorepo",
  "version": "0.1.0",
  "description": "Professional multi-provider agent orchestration library and runtime.",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --parallel --workspaces --if-present build",
    "test": "bun run --parallel --workspaces --if-present test",
    "check": "bun run build && bun run test",
    "lint": "bun run --parallel --workspaces --if-present lint",
    "clean": "bun run --parallel --workspaces --if-present clean",
    "install:frozen": "bun install --frozen-lockfile",
    "repo:validate": "bash scripts/validate-repo.sh",
    "release:check": "npm run check && npm pack --dry-run",
    "release:pack": "npm pack --workspaces --if-present --pack-destination dist-artifacts",
    "release:publish:npm": "node ./scripts/publish-workspaces.mjs --registry=https://registry.npmjs.org --access=public --provenance",
    "release:publish:github": "node ./scripts/publish-workspaces.mjs --registry=https://npm.pkg.github.com",
    "ops:cost-report": "node ./scripts/analyze-costs.mjs",
    "ops:export-transcript": "node ./scripts/export-transcript.mjs",
    "ops:export-analytics": "node ./scripts/export-analytics.mjs"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "typescript": "^5.4.0",
    "zod": "^3.25.76"
  },
  "dependencies": {
    "glob": "^13.0.6",
    "ignore": "^7.0.5"
  }
}
